<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adultmode"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADULT MODE"
            android:fontFamily="@font/deva"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">


            <ImageButton
                android:layout_width="351dp"
                android:layout_height="191dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/world_explorer"
                android:contentDescription="Child mode" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="World Facts!"
                android:textColor="@color/blue"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/menseal"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <ImageButton
                android:layout_width="347dp"
                android:layout_height="191dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/yoga1"
                android:contentDescription="Child mode" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meditate"
                android:fontFamily="@font/menseal"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="20dp"/>


            <ImageButton
                android:layout_width="452dp"
                android:layout_height="191dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/storyview"
                android:contentDescription="Child mode" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read the Character"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/menseal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/blue"
                />


            <ImageButton
                android:layout_width="347dp"
                android:layout_height="191dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/whoami"
                android:contentDescription="Child mode" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Who am I ?"
                android:textStyle="bold"
                android:layout_marginBottom="100dp"
                android:textColor="@color/blue"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/menseal"
                android:textSize="20dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>